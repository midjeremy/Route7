<MapScreen>:
    BoxLayout:
        orientation: 'vertical'

        MapView:
            id: map_view
            zoom: 10
            lat: -33.4489
            lon: -70.6693
            on_touch_down: root.on_map_touch(self, args[1])

        BoxLayout:
            size_hint_y: None
            height: 50

            Button:
                text: 'Guardar Ruta'
                on_press: root.save_ruta()

            Spinner:
                id: ruta_selector
                text: 'Selecciona Ruta'
                values: []
                on_text: root.cargar_ruta(self.text)

            Button:
                text: 'Limpiar Ruta'
                on_press: root.limpiar_ruta()

            Button:
                text: 'Salir del mapa'
                on_press: root.salir_mapa()
