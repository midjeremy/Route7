<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 60, 20, 20]  # Margen móvil
        spacing: 20

        Label:
            text: "Ingreso con RUT"
            font_size: 28
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        TextInput:
            id: rut_input
            hint_text: "Ej: 12.345.678-9"
            multiline: False
            input_filter: lambda text, from_undo: text.upper()
            size_hint_y: None
            height: 45

        TextInput:
            id: password_input
            hint_text: "Contraseña"
            password: True
            multiline: False
            size_hint_y: None
            height: 45

        Button:
            text: "Iniciar Sesión"
            size_hint_y: None
            height: 50
            on_release:
                root.verificar_credenciales(rut_input.text, password_input.text)

        Label:
            id: mensaje_error
            text: ""
            color: (1, 0, 0, 1)
            font_size: 16
            halign: "center"
            size_hint_y: None
            height: 30
